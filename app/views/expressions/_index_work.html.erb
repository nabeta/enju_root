<div id="submenu">
  <ul>
    <li><%= link_to t('work.add'), works_path -%></li>
    <li><%= link_to t('page.new', :model => t('activerecord.models.expression')), new_work_expression_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.expression')) -%></h1>
<div id="content_list">
  <h2 class="resource_title">
    [W]
    <%= link_to h(@work.original_title), @work -%>
  </h2>
  <p>
    <%= raw patrons_list(@work.patrons) -%>
  </p>

  <%- form_for :expressions, :url => work_expressions_path(@work), :html => {:method => 'get'} do -%>
    <p>
      <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), {:id => 'search_form_top', :class => 'search_form'} -%>
      <%- if @work.is_deletable_by(current_user) -%>
        <%- if params[:mode] == 'add' -%>
          <%= radio_button_tag 'mode', 'show' -%> <%= t('page.show') -%>
          <%= radio_button_tag 'mode', 'add', :checked => true -%> <%= t('page.add') -%>
        <%- else -%>
          <%= radio_button_tag 'mode', 'show', :checked => true -%> <%= t('page.show') -%>
          <%= radio_button_tag 'mode', 'add' -%> <%= t('page.add') -%>
        <%- end -%>
      <%- end -%>
      <%= submit_tag t('page.search') -%>
      <%= link_to t('page.back_to_index'), work_expressions_path(@work) -%>
    </p>
    <%= javascript_tag("$('search_form_top').focus()") -%>
  <%- end -%>

<table style="width:100%">
  <tr>
    <th><%= t('page.title') -%></th>
    <th><%= t('activerecord.models.language') -%></th>
    <th></th>
  </tr>
  
<%- @expressions.each do |expression| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      [E]
      <%= link_to h(expression.original_title), work_expression_path(@work, expression) -%>
      <%= content_type_icon(expression.content_type) -%><br />
      <%= raw patrons_list(expression.authors, current_user) -%>
      <%= raw patrons_list(expression.patrons, current_user) -%>
    </td>
    <td><%= expression.language.display_name.localize -%></td>
    <td>
      <%- if expression.is_deletable_by(current_user) -%>
        <%- if params[:mode] == "add" -%>
          <%= link_to t('page.add'), new_work_reify_path(@work, :expression_id => expression.id) unless @work.expressions.include?(expression) -%>
        <%- else -%>
          <%= link_to t('page.destroy'), work_reify_path(@work, @work.reified(expression)), :confirm => t('page.are_you_sure'), :method => :delete -%>
        <%- end -%>
      <%- end -%>
    </td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@expressions, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>
