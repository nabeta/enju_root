<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), use_restrictions_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('New use_restriction') -%></h1>

<%= error_messages_for :use_restriction -%>

<%- form_for(@use_restriction) do |f| -%>
  <p>
    <b><%= t('page.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('page.display_name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('page.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
