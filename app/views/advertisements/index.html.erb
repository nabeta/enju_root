div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.advertisement')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.advertisement.title') -%></th>
    <th><%= t('activerecord.attributes.advertisement.url') -%></th>
    <th><%= t('activerecord.attributes.advertisement.body') -%></th>
    <th><%= t('advertisement.period') -%></th>
  </tr>

<%- @advertisements.each do |advertisement| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(advertisement.title), advertisement -%></td>
    <td><%= link_to h(advertisement.url), advertisement.url -%></td>
    <td><%= advertisement.body -%></td>
    <td>
      <%= l(advertisement.started_at) -%>
      -
      <%= l(advertisement.ended_at) -%>
    </td>
    <td><%= link_to t('page.show'), advertisement -%></td>
    <td><%= link_to t('page.edit'), edit_advertisement_path(advertisement) -%></td>
    <td><%= link_to t('page.destroy'), advertisement, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@advertisements) -%>
</div>
</div>

div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.advertisement')), new_advertisement_path -%></li>
  </ul>
</div>
