<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @work -%></li>
    <li><%= link_to t('page.back'), works_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.work')) -%></h1>
<div id="content_list">

<%- form_for(@work) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.work.original_title') -%><br />
    <%= f.text_field :original_title, :class => 'resource_title' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.work.title_transcription') -%><br />
    <%= f.text_field :title_transcription, :class => 'resource_title' -%>
  </p>

  <p>
    <%= f.label t('activerecord.models.form_of_work') -%><br />
    <%= f.select(:form_of_work_id, @form_of_works.collect{|w| [w.display_name.localize, w.id]}) -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.work.parent_of_series') -%>
    <%= f.check_box :parent_of_series -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.work.context') -%><br />
    <%= f.text_area :context, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.work.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
  <%= javascript_tag("$('work_original_title').focus()") -%>
<%- end -%>

</div>
</div>
