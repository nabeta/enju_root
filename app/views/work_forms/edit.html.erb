<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @work_form -%></li>
    <li><%= link_to ('Back'), work_forms_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing work_form') -%></h1>

<%= error_messages_for :work_form -%>

<%- form_for(@work_form) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>

</div>
