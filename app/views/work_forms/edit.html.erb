<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @work_form -%></li>
    <li><%= link_to t('page.back'), work_forms_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing work_form') -%></h1>

<%= error_messages_for :work_form -%>

<%- form_for(@work_form) do |f| -%>
  <p>
    <b><%= t('page.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.work_form.display_name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('page.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
