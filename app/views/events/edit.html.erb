<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @event -%></li>
    <li><%= link_to ('Back'), events_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing event') -%></h1>

<%= error_messages_for :event -%>

<%- form_for(@event) do |f| -%>
  <p>
    <b><%= ('Event category') -%></b><br />
    <%= f.select(:event_category_id, @event_categories.collect{|e| [e.display_name, e.id]}) -%>
  </p>

  <p>
    <b><%= ('Library') -%></b><br />
    <%= f.select(:library_id, @libraries.collect{|l| [l.display_name, l.id]}) -%>
  </p>

  <p>
    <b><%= ('Title') -%></b><br />
    <%= f.text_field :title, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Start at') -%></b><br />
    <%= f.date_select :started_at, :use_month_numbers => true -%>
  </p>

  <p>
    <b><%= ('End at') -%></b><br />
    <%= f.date_select :ended_at, :use_month_numbers => true -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <!--
  <p>
    <b><%= ('Tag') -%></b><br />
    <%= f.text_field :tag_list -%>
  </p>
  -->

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>
</div>
