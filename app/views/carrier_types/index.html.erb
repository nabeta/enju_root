<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.carrier_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.carrier_type.name') -%></th>
    <th><%= t('activerecord.attributes.carrier_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.carrier_type.note') -%></th>
  </tr>
  
<%- @carrier_types.each do |carrier_type| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if carrier_type.is_deletable_by(current_user) -%>
        <%= move_position(carrier_type) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(carrier_type.name), carrier_type -%></td>
    <td><%= link_to h(carrier_type.display_name.localize), carrier_type -%></td>
    <td><%= carrier_type.note -%></td>
    <%- if carrier_type.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_carrier_type_path(carrier_type) -%></td>
      <td><%= link_to t('page.destroy'), carrier_type_path(carrier_type), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="submenu">
  <ul>
    <%- if CarrierType.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.carrier_type')), new_carrier_type_path -%></li>
    <%- end -%>
  </ul>
</div>
