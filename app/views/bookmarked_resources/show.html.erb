<div id="sidebar">
  <ul>
    <%- if @user -%>
      <li><%= link_to t('page.edit'), edit_user_bookmarked_resource_path(@user.login, @bookmarked_resource) -%></li>
    <%- else -%>
      <li><%= link_to t('page.edit'), edit_bookmarked_resource_path(@bookmarked_resource) -%></li>
    <%- end -%>
    <li><%= link_to t('page.back'), :back -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.bookmarked_resource')) -%></h1>
<div class="inner">

<%= render :partial => 'manifestations/title', :locals => {:manifestation => @bookmarked_resource.manifestation} -%>

<p>
  <b><%= t('activerecord.attributes.bookmarked_resource.url') -%>:</b>
  <%= link_to h(@bookmarked_resource.url), h(@bookmarked_resource.url) -%>
</p>

<p>
  <b><%= t('activerecord.models.tag') -%>:</b><br />
<%- @bookmarked_resource.tags.each do |tag| -%>
  <%= link_to h(tag.name), tag_path(tag.name) -%>
<%- end -%>
</p>

<p>
  <b><%= t('bookmarked_resource.number_of_bookmark') -%>:</b> <%= t('bookmarked_resource.bookmark_count', :count => @bookmarked_resource.bookmarks_count) -%>
</p>
<ul>
  <%- @bookmarked_resource.bookmarks.each do |bookmark| -%>
    <li><%= link_to h(bookmark.user.login), user_bookmarked_resources_path(bookmark.user.login) -%></li>
  <%- end -%>
        
</ul>
</div>
