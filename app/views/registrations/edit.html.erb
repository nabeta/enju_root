<div id="content_detail">
  <h2 class="title"><%= t('page.editing', :model => t('activerecord.models.user')) -%></h2>
  <div id="content_list">

<% form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f| -%>
  <%= f.error_messages %>

  <p>
    <%= f.label t('activerecord.attributes.user.username') %><br />
    <%= f.text_field :username, :class => 'resource_user' %>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user.email') %><br />
    <%= f.text_field :email, :class => 'resource_email' %>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user.password') %> <i>(<%= t('devise.passwords.leave_blank') -%>)</i><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user.password_confirmation') %><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user.current_password') %> <i>(<%= t('devise.passwords.need_current_password') -%>)</i><br />
    <%= f.password_field :current_password %>
  </p>

  <p><%= f.submit t('page.update') %></p>
  <%= javascript_tag("$('user_username').focus()") -%>
<% end -%>

