<div id="left_pane">
  <h1 class="title"><%= t('page.user_title', :login_name => @user.login) -%></h1>
  <div id="user_search_form">  
    <%- cache :controller => 'page', :action => 'index', :name => 'search_form', :locale => @locale do -%>
      <%= render :partial => 'page/search_form' -%>
    <%- end -%>
  </div>

  <%- cache :name => 'message', :locale => @locale do -%>
  <h3 class="title"><%= t('activerecord.models.message') -%></h3>
  <div id="message_box">
    <%- if current_user.unread_messages.size > 0 -%>
      <%= link_to t('page.number_of_unread_messages', :numdocs => current_user.unread_messages.size, :count => current_user.unread_messages.size), user_messages_path(current_user.login) -%>
    <%- else -%>
      <%= t('message.no_new_message') -%>
      (<%= link_to t('page.listing', :model => t('activerecord.models.message')), user_messages_path(current_user.login) -%>)
    <%- end -%>
  </div>
  <%- end -%>

  <h3 class="title"><%= t('page.news') -%></h3>
  <div id="news_feed_box">
    <%= render :partial => 'news_feeds/list', :locals => {:news_feeds => @news_feeds} -%>
  </div>

</div>

<div id="right_pane">
  <h3 class="title"><%= t('manifestation.pickup') -%></h3>
  <div id="picked_up_box">
    <%= render :partial => 'manifestations/pickup' -%>
  </div>

  <h3 class="title"><%= t('tag.my_tag') -%></h3>
  <div id="tag_cloud_box">
    <%- cache(:controller => 'tags', :action => 'index', :action_suffix => 'user_tag_cloud', :user_id => current_user.login, :locale => @locale) do -%>
      <%= render :partial => 'bookmarks/tag_cloud', :locals => {:tags => @tags} -%>
    <%- end -%>
    <p>(<%= link_to t('page.listing', :model => t('activerecord.models.tag')), tags_path -%>)</p>
  </div>

</div>
