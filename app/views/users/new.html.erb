<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), @patron -%></li>
  </ul>
</div>

<div id="content_detail">
<%= error_messages_for :user -%>

<%- form_for :user, :url => users_path do |f| -%>
<%- if @patron -%>
  <p><label for="login"><%= ('Name') -%></label><br/>
  <%= link_to h(@patron.full_name), patron_path(@patron) -%>
  <%= f.hidden_field :patron_id, :value => @patron.id -%></p>
<%- end -%>

<p><label for="login"><%= ('Login') -%></label><br/>
<%= f.text_field :login, :value => "" -%></p>

<p><label for="email"><%= ('Email') -%></label><br/>
<%= f.text_field :email, :value => "" -%></p>

<p><label for="user_number"><%= ('User number') -%></label><br/>
<%= f.text_field :user_number, :value => "" -%></p>

<p><label for="expired_at"><%= ('Expired at') -%></label><br/>
<%= f.date_select :expired_at, :include_blank => true -%>
</p>

<p><label for="user_group"><%= ('User group') -%></label><br/>
<%= f.select(:user_group_id, @user_groups.collect{|u| [u.name, u.id]}) -%>

<p><%= submit_tag ('Sign up') -%></p>
<%- end -%>
</div>
