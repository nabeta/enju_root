<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), users_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.user')) -%></h1>

<div id="content_list">
<%= error_messages_for :user -%>
<%- form_for(@user) do |f| -%>
<%- if @patron -%>
  <h1 id="resource_title">
    [P]
    <%= link_to h(@patron.full_name), @patron -%>
  </h1>
  <%= f.hidden_field :patron_id -%></p>
<%- else -%>
  <p>
    <%= f.label t('activerecord.attributes.patron.last_name') -%><br />
    <%= f.text_field :last_name, :class => 'resource_title' -%><br />
    <%= f.label t('activerecord.attributes.patron.first_name') -%><br />
    <%= f.text_field :first_name, :class => 'resource_title' -%><br />
  </p>
<%- end -%>

<p>
  <label for="login"><%= t('activerecord.attributes.user.login') -%></label>
  <%= f.text_field :login, :value => "" -%>
  <label for="email"><%= t('activerecord.attributes.user.email') -%></label>
  <%= f.text_field :email, :value => "" -%>
</p>

  <p>
    <b><%= t('activerecord.attributes.patron.zip_code_1') -%></b>
    <%= f.text_field :zip_code -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.patron.address_1') -%></b><br />
    <%= f.text_area :address, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.patron.telephone_number_1') -%></b>
    <%= f.text_field :telephone_number, :class => 'resource_telephone_number' -%>
    <b><%= t('activerecord.attributes.patron.fax_number_1') -%></b>
    <%= f.text_field :fax_number, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.patron.address_1_note') -%></b><br />
    <%= f.text_area :address_note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <label for="expired_at"><%= t('activerecord.attributes.user.expired_at') -%></label>
    <%= f.date_select :expired_at, :include_blank => true -%>
    <label for="user_group"><%= t('activerecord.models.user_group') -%></label>
    <%= f.select(:user_group_id, @user_groups.collect{|u| [u.name, u.id]}) -%>
  </p>

<p><label for="user_number"><%= t('activerecord.attributes.user.user_number') -%></label>
<%= f.text_field :user_number, :value => "" -%></p>

<p><%= f.submit t('user.sign_up') -%></p>
<%- end -%>
</div>
</div>
