<div id="submenu">
  <ul>
    <%- if logged_in? && current_user.has_role?('Librarian') -%>
      <li><%= link_to ('New user'), new_user_path -%></li>
    <%- end -%>
    <li><%= link_to ('Search patrons'), patrons_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Listing users') -%></h1>

<%- form_for :users, :url => users_path, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query) -%>
    <%= hidden_field_tag 'patron_id', @patron.id if @patron -%>
    <%= submit_tag t('page.search') -%>
  </p>
<%- end -%>

<table id="index">
  <tr>
    <th><%= ('Login') -%></th>
    <th><%= t('page.name') -%></th>
    <th><%= t('page.checkout') -%></th>
    <th><%= ('Reservation') -%></th>
  </tr>
  
<%- @users.each_with_index do |user, i| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(user.login), user_path(user.login) -%></td>
    <td><%=h user.patron.full_name if current_user.has_role?('Librarian')%></td>
    <td>
      <%= link_to t('page.checkout'), new_basket_path(:user_id => user.id) -%>
      (<%= link_to ('Checkout history'), user_checkouts_path(user.login) -%>)
    </td>
    <td><%= link_to ('Reservation'), user_reserves_path(user.login) -%></td>
    <td><%= link_to t('page.edit'), edit_user_path(user.login) -%></td>
  </tr>
<%- end -%>
</table>

<br />
<%= will_paginate(@users) -%>

</div>
