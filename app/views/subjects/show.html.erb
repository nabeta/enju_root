<div id="content_detail">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.subject')) -%></h1>
<div id="content_list">
<%- cache(:id => @subject.id, :action => :show, :controller => :subjects, :editable => @subject.is_updatable_by(current_user), :locale => @locale) do -%>
<h2 class="resource_title">
  <%= @subject.term -%>
</h2>
  <p>
    (<%= link_to_wikipedia(@subject.term) -%>)
  </p>

  <p>
    <%- @subject.subject_heading_types.uniq.each do |subject_heading_type| -%>
      <%= link_to h(subject_heading_type.display_name.localize), subject_heading_type -%>
    <%- end -%>
  </p>

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.classification.category') -%></th>
    <th><%= t('activerecord.models.classification_type') -%></th>
  </tr>
  <%- @subject.classifications.each do |classification| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(classification.category), classification -%></td>
    <td><%= link_to h(classification.classification_type.name), classification.classification_type -%></td>
  </tr>
  <%- end -%>
</table>

<p>
  <strong><%= t('activerecord.attributes.subject.note') -%>:</strong>
  <%= @subject.note -%>
</p>

<%= render :partial => 'subjects/show_work_list' -%>

<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <%- if flash[:query] -%>
      <li><%= link_to t('page.back'), subjects_path(:query => flash[:query]) -%></li>
    <%- else -%>
      <li><%= link_to t('page.back'), subjects_path -%></li>
    <%- end -%>
    <%- if SubjectHasClassification.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.edit'), edit_subject_path(@subject) -%></li>
      <li><%= link_to t('page.destroy'), subject_path(@subject), :confirm => t('page.are_you_sure'), :method => :delete -%></li>
    <%- end -%>
    <li><%= link_to t('page.listing', :model => t('activerecord.models.classification')), subject_classifications_path(@subject) -%></li>
    <li><%= link_to t('page.listing', :model => t('activerecord.models.work')), subject_works_path(@subject) -%></li>
    <li><%= link_to t('page.listing', :model => t('activerecord.models.subject_heading_type')), subject_subject_heading_types_path(@subject) -%></li>
  </ul>
</div>
