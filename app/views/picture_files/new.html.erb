<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.picture_file')) -%></h1>
<div id="content_list">

<%- case when @manifestation -%>
  <%= render :partial => 'new_manifestation' -%>
<%- when @event -%>
  <%= render :partial => 'new_event' -%>
<%- when @shelf -%>
  <%= render :partial => 'new_shelf' -%>
<%- when @patron -%>
  <%= render :partial => 'new_patron' -%>
<%- else -%>
  <%- form_for(:picture_file, :url => picture_files_path, :html => { :multipart => true, :method => :post }) do |f| -%>
  <%= f.error_messages -%>
  <p>
    <%= f.label t('page.title') -%><br />
    <%= f.text_field :title -%>
  </p>

  <%= f.hidden_field :picture_attachable_id -%>

  <%= f.hidden_field :picture_attachable_type -%>

  <p>
    <%= f.label t('page.file') -%><br />
    <%= f.file_field :picture -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

<%- end -%>
</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), :back -%></li>
  </ul>
</div>
