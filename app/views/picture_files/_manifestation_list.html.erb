<%- for picture_file in @picture_files -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if picture_file.is_deletable_by(current_user) -%>
        <%= move_position(picture_file) -%>
      <%- end -%>
    </td>
    <td>
      <%= link_to "#{h(picture_file.picture_attachable_type)}/#{h(picture_file.picture_attachable_id)}", picture_file.picture_attachable if picture_file.picture_attachable -%>
    </td>
    <td><%= picture_file.picture_file_size -%></td>
    <td><%= picture_file.picture_content_type -%></td>
    <td><%= link_to h(picture_file.picture_file_name), picture_file_path(picture_file, :format => :download, :size => 'original') -%></td>
    <td><%= picture_file.height -%></td>
    <td><%= picture_file.width -%></td>
    <%- if picture_file.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.show'), manifestation_picture_file_path(manifestation, picture_file) -%></td>
      <td><%= link_to t('page.edit'), edit_manifestation_picture_file_path(manifestation, picture_file) -%></td>
      <td><%= link_to t('page.destroy'), manifestation_picture_file_path(manifestation, picture_file), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>

