<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @donate -%></li>
    <li><%= link_to t('page.back'), donates_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.donate')) -%></h1>
<div id="content_list">

<%= error_messages_for :donate -%>

<%- form_for(@donate) do |f| -%>
  <p>
    <b><%= t('activerecord.models.patron') -%></b><br />
    <%= f.text_field :patron_id -%>
  </p>

  <p>
    <b><%= t('activerecord.models.item') -%></b><br />
    <%= f.text_field :item_id -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
