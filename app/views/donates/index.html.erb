<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Donate) do -%>
      <li><%= link_to ('New donate'), new_donate_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Listing donates') -%></h1>

<table id="index">
  <tr>
    <th><%= t('page.patron') -%></th>
    <th><%= t('page.manifestation') -%></th>
    <th><%= t('page.item') -%></th>
  </tr>

<%- for donate in @donates -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(donate.patron.full_name), donate.patron -%></td>
    <td>
      <%= link_to h(donate.item.manifestation.original_title), donate.item.manifestation -%>
    </td>
    <td>
      <%= link_to h(donate.item.item_identifier), donate.item -%>
    </td>
    <%- if_authorized?(:destroy, donate) do -%>
      <td><%= link_to t('page.show'), donate -%></td>
      <td><%= link_to t('page.edit'), edit_donate_path(donate) -%></td>
      <td><%= link_to t('page.destroy'), donate, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@donates, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
