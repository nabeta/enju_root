<div id="sidebar">
  <ul>
    <%- if Donate.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.donate')), new_donate_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.donate')) -%></h1>
<div class="inner">

<table class="index">
  <tr>
    <th><%= t('activerecord.models.patron') -%></th>
    <th><%= t('activerecord.models.manifestation') -%></th>
    <th><%= t('activerecord.models.item') -%></th>
  </tr>

<%- for donate in @donates -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(donate.patron.full_name), donate.patron -%></td>
    <td>
      <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => donate.item.manifestation} -%>
    </td>
    <td>
      <%= link_to h(donate.item.item_identifier), donate.item -%>
    </td>
    <%- if donate.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.show'), donate -%></td>
      <td><%= link_to t('page.edit'), edit_donate_path(donate) -%></td>
      <td><%= link_to t('page.destroy'), donate, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@donates, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
