<div id="sidebar">
  <ul>
    <%- if Classification.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.classification')), new_classification_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.classification')) -%></h1>
<div class="inner">

<%- form_for :classifications, :url => classifications_path, :html => {:method => 'get'} do -%>
  <p>
  <%= t('page.search_term') -%>: <%= text_field_tag 'query', @query, {:class => 'search_form'} -%>
    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('query').focus()") -%>
<%- end -%>
        
<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.classification.category') -%></th>
    <th><%= t('activerecord.attributes.classification.note') -%></th>
    <th><%= t('activerecord.models.classification_type') -%></th>
  </tr>

<%- for classification in @classifications -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(classification.category), classification -%></td>
    <td><%=h classification.note -%></td>
    <td><%= link_to h(classification.classification_type.display_name.localize), classification.classification_type -%></td>
    <%- if classification.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_classification_path(classification) -%></td>
      <td><%= link_to t('page.destroy'), classification, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@classifications, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
