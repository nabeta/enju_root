<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Classification) do -%>
      <li><%= link_to ('New classification'), new_classification_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Listing classifications') -%></h1>

<%- form_for :classifications, :url => classifications_path, :html => {:method => 'get'} do -%>
  <p>
    <%= ('Search term') -%>: <%= text_field_tag 'query', @query -%>
    <%= submit_tag ('Search') -%>
  </p>
<%- end -%>
        
<table style="width: 100%">
  <tr>
    <th><%= ('Category') -%></th>
    <!-- <th><%= ('Name') -%></th> -->
    <th><%= ('Note') -%></th>
    <th><%= ('Type') -%></th>
  </tr>

<%- for classification in @classifications -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(classification.category), classification -%></td>
    <!-- <td><%= link_to h(classification.name), classification -%></td> -->
    <td><%=h classification.note -%></td>
    <td><%=h classification.classification_type.display_name -%></td>
    <%- if_authorized?(:destroy, classification) do -%>
      <td><%= link_to t('edit'), edit_classification_path(classification) -%></td>
      <td><%= link_to t('destroy'), classification, :confirm => ('Are you sure?'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@classifications) -%>

</div>
