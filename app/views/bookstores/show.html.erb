  <b><%= t('activerecord.attributes.bookstore.telephone_number') -%>:</b>
  <%=h @bookstore.telephone_number -%>
</p>

<p>
  <b><%= t('activerecord.attributes.bookstore.fax_number') -%>:</b>
  <%=h @bookstore.fax_number -%>
</p>

<p>
  <b><%= t('activerecord.attributes.bookstore.url') -%>:</b>
  <%= link_to h(@bookstore.url), @bookstore.url -%>
</p>

<p>
  <b><%= t('activerecord.attributes.bookstore.note') -%>:</b>
