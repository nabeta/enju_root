<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.bookstore')) -%></h1>
<div id="content_list">

<%= form_for(@bookstore) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.bookstore.name') -%><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.bookstore.zip_code') -%><br />
    <%= f.text_field :zip_code -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.bookstore.address') -%><br />
    <%= f.text_area :address, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.bookstore.telephone_number') -%><br />
    <%= f.text_field :telephone_number -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.bookstore.fax_number') -%><br />
    <%= f.text_field :fax_number -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.bookstore.url') -%><br />
    <%= f.text_field :url, :class => 'resource_url' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.bookstore.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.show'), @bookstore -%></li>
    <li><%= link_to t('page.back'), bookstores_path -%></li>
  </ul>
</div>
