<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @bookstore -%></li>
    <li><%= link_to t('page.back'), bookstores_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.bookstore')) -%></h1>

<%= error_messages_for :bookstore -%>

<%- form_for(@bookstore) do |f| -%>
  <p>
  <b><%= t('activerecord.attributes.bookstore.name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.bookstore.zip_code') -%></b><br />
    <%= f.text_field :zip_code -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.bookstore.address') -%></b><br />
    <%= f.text_area :address, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.bookstore.telephone_number') -%></b><br />
    <%= f.text_field :telephone_number -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.bookstore.fax_number') -%></b><br />
    <%= f.text_field :fax_number -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.bookstore.url') -%></b><br />
    <%= f.text_field :url, :class => 'resource_url' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.bookstore.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>
</div>
