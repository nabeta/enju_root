<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), reify_path(@reify) -%></li>
    <li><%= link_to t('page.back'), reifies_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing reify') -%></h1>

<%= error_messages_for :reify -%>

<%- form_for(:reify, :url => reify_path(@reify), :html => { :method => :put }) do |f| -%>
  <p>
  <b><%= t('page.work') -%></b><br />
    <%= f.text_field :work_id -%>
  </p>

  <p>
  <b><%= t('page.expression') -%></b><br />
    <%= f.text_field :expression_id -%>
  </p>

  <p>
    <%= submit_tag t('page.update') -%>
  </p>
<%- end -%>

</div>
