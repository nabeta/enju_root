<h1><%= ('Listing reifies') -%></h1>

<table id="index">
  <tr>
    <th><%= t('page.work') -%></th>
    <th><%= t('page.expression') -%></th>
  </tr>

<%- for reify in @reifies -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(reify.work.original_title), work_path(reify.work) -%></td>
    <td><%= link_to h(reify.expression.original_title), expression_path(reify.expression) -%></td>
    <%- if_authorized?(:destroy, reify) do -%>
      <td><%= link_to t('page.show'), reify -%></td>
      <td><%= link_to t('page.destroy'), reify, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<% if_authorized?(:new, Reify) do -%>
  <p><%= link_to ('New reify'), new_reify_path -%></p>
<%- end -%>

<%= will_paginate(@reifies) -%>
