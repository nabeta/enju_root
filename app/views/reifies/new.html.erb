<div id="submenu">
  <ul>
    <li><%= link_to ('Back to work'), expression_work_path(@expression) -%>
    <li><%= link_to ('Back to expressions'), work_expressions_path(@work) -%>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('New reify') -%></h1>

<%= error_messages_for :reify -%>

<%- form_for(:reify, :url => reifies_path) do |f| -%>
  <p>
    <b><%= t('page.work') -%></b><br />
    <%- if @work -%>
		  <%= link_to h(@work.original_title), @work -%>
      <%= f.hidden_field :work_id, :value => @work.id -%>
    <%- else -%>
      <%= f.text_field :work_id, :value => params[:work_id] -%>
    <%- end -%>
  </p>

  <p>
    <b><%= t('page.expression') -%></b><br />
    <%- if @expression -%>
		  <%= link_to h(@expression.original_title), expression_path(@expression) -%>
      <%= f.hidden_field :expression_id, :value => @expression.id -%>
    <%- else -%>
      <%= f.text_field :expression_id, :value => params[:expression_id] -%>
    <%- end -%>
  </p>

  <p>
    <%= submit_tag t('page.create') -%>
  </p>
<%- end -%>

</div>
