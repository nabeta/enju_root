<div id="submenu">
  <ul>
    <li><%= link_to ('New subscription'), new_subscription_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Listing subscriptions') -%></h1>

<table id="index">
  <tr>
    <th><%= t('page.title') -%></th>
    <th><%= ('Subscription term') -%></th>
    <th><%= ('Count') -%></th>
  </tr>

<%- for subscription in @subscriptions -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(subscription.title), subscription -%></td>
    <td><%= subscription.expressions.size -%></td>
    <td><%= link_to t('page.edit'), edit_subscription_path(subscription) -%></td>
    <td><%= link_to t('page.destroy'), subscription, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@subscrpitions, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
