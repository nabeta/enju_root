<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Order) do -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.order')), new_order_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
  <h1><%= t('page.listing', :model => t('activerecord.models.order')) -%></h1>

<table>
  <tr>
    <th><%= t('activerecord.models.order_list') -%></th>
    <th><%= t('activerecord.models.purchase_request') -%></th>
    <th><%= t('page.created_at') -%></th>
    <th><%= t('page.updated_at') -%></th>
  </tr>

<%- for order in @orders -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(order.order_list.title), order.order_list -%></td>
    <td><%= link_to h(order.purchase_request.title), purchase_request_path(order.purchase_request) -%></td>
    <td><%= l(order.created_at) -%></td>
    <td><%= l(order.updated_at) -%></td>
    <%- if_authorized?(:destroy, order) do -%>
      <td><%= link_to t('page.show'), order_path(order) -%></td>
      <td><%= link_to t('page.edit'), edit_order_path(order) -%></td>
      <td><%= link_to t('page.destroy'), order_path(order), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@orders, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
