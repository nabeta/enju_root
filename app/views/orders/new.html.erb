<div id="sidebar">
  <ul>
    <li><%= link_to t('page.back'), orders_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.order')) -%></h1>
<div class="inner">

<%= error_messages_for :order -%>

<%- form_for(@order) do |f| -%>
  <p>
  <b><%= t('activerecord.models.order_list') -%></b><br />
    <%= f.select(:order_list_id, @order_lists.collect{|l| [l.title, l.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.models.purchase_request') -%></b><br />
    <%- if @purchase_request -%>
      <%= link_to h(@purchase_request.title), @purchase_request -%>
      <%= f.hidden_field :purchase_request_id, :value => @purchase_request.id -%>
    <%- else -%>
      <%= f.text_field :purchase_request_id -%>
    <%- end -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
