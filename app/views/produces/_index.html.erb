<div class="inner">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.produce')) -%></h1>
<div class="inner">

<table class="index">
  <tr>
    <th><%= t('activerecord.models.patron') -%></th>
    <th><%= t('activerecord.models.manifestation') -%></th>
  </tr>
  
<%- for produce in @produces -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(produce.patron.full_name), produce.patron -%></td>
    <td><%= link_to h(produce.manifestation.original_title), produce.manifestation -%></td>
    <%- if produce.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.show'), produce -%></td>
      <td><%= link_to t('page.destroy'), produce, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@produces, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>

<div id="sidebar">
  <%- if Produce.is_creatable_by(current_user) -%>
    <ul>
      <li><%= link_to t('page.new', :model => t('activerecord.models.produce')), new_realize_path -%></li>
    </ul>
  <%- end -%>
</div>
