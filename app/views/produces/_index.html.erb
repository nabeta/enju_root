<h1><%= ('Listing produces') -%></h1>

<table id="index">
  <tr>
    <th><%= t('page.patron') -%></th>
    <th><%= t('page.manifestation') -%></th>
  </tr>
  
<%- for produce in @produces -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(produce.patron.full_name), patron_path(produce.patron) -%></td>
    <td><%= link_to h(produce.manifestation.original_title), manifestation_path(produce.manifestation) -%></td>
    <%- if_authorized?(:destroy, produce) do -%>
      <td><%= link_to t('page.show'), produce -%></td>
      <td><%= link_to t('page.destroy'), produce, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%- if_authorized?(:new, Produce) do -%>
  <p><%= link_to ('New produce'), new_produce_path -%></p>
<%- end -%>

<%= will_paginate(@produces, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
