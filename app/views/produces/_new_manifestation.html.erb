<%- form_for(:produce, :url => produces_path) do |f| -%>
  <p>
  <b><%= t('activerecord.models.patron') -%></b><br />
    <%- if @patron -%>
      <%=h @patron.full_name -%>
    <%- else -%>
      <%= f.text_field :patron_id, :value => params[:patron_id] -%>
    <%- end -%>
  </p>

  <p>
  <b><%= t('activerecord.models.manifestation') -%></b><br />
    <%- if @manifestation -%>
      <%=h @manifestation.original_title -%>
    <%- else -%>
      <%= f.text_field :manifestation_id, :value => params[:manifestation_id] -%>
    <%- end -%>
  </p>

  <p>
    <%= submit_tag t('page.create') -%>
  </p>
<%- end -%>

<%= link_to t('page.back'), produces_path -%>
