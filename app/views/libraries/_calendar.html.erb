<div id="event_list">
  (<%= link_to t('page.calendar'), :controller => :calendar, :action => :index, :library_id => @library.name -%>)
  <ul>
    <%- @events.each do |event| -%>
      <li>
        <%= link_to h(event.title), event -%>
        (<%= l(event.start_at) -%> - <%= l(event.end_at) -%>)
      </li>
    <%- end -%>
  </ul>

  <%= will_paginate(@events, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next'), :param_name => :event_page, :class => 'content_pagination') -%>
</div>
