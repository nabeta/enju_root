<div id="submenu">
  <ul>
    <%- if Library.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.library')), new_library_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.library')) -%></h1>
<div id="content_list">

<%- form_for :libraries, :url => libraries_path, :html => {:method => 'get'} do -%>
  <p>
  <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), {:class => 'search_form'} -%>
    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('query').focus()") -%>
<%- end -%>

<p>
  <%= t('page.sort_by') -%>:
  <%= link_to t('activerecord.attributes.tag.name'), libraries_path(:order => 'name') -%>
  <%= link_to t('page.created_at'), libraries_path(:sort_by => 'created_at') -%>
</p>

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.library.name') -%></th>
    <th>
      <%= t('activerecord.attributes.library.telephone_number_1') -%>
      /
      <%= t('activerecord.attributes.library.telephone_number_2') -%>
    </th>
    <th>
      <%= t('activerecord.attributes.library.fax_number') -%>
    </th>
  </tr>
  
<%- @libraries.each_with_index do |library, i| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if library.is_deletable_by(current_user) -%>
        <%= move_position(library) -%>
      <%- end -%>
    </td>
    <td>
      <%= link_to h(library.display_name.localize), library_path(library.name) -%>
      <br />
      <%=h library.postal_code -%>
      <%=h library.address -%>
    </td>
    <td>
      <%=h library.telephone_number_1 -%>
      <br />
      <%=h library.telephone_number_2 -%>
    </td>
    <td><%=h library.fax_number -%></td>
    <%- if library.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_library_path(library.name) -%></td>
      <td><%= link_to t('page.destroy'), library_path(library.name), :confirm => t('page.are_you_sure'), :method => :delete unless library.web? -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

</div>
</div>
