<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.reserve')) -%></h1>
<div id="content_list">

<%- form_for(@reserve) do |f| -%>
  <%= f.error_messages -%>

  <%- if @reserve.manifestation -%>
    <%= render :partial => 'manifestations/title', :locals => {:manifestation => @reserve.manifestation} -%>
    <%= f.hidden_field :manifestation_id -%>
  <%- else -%>
    <p>
      <%= f.label t('activerecord.models.manifestation') -%><br />
      <%= f.text_field :manifestation_id -%>
    </p>
  <%- end -%>

  <p>
    <%= f.label t('activerecord.attributes.reserve.expired_at') -%><br />
    <%= f.date_text_field :expired_at, :class => 'date_field', :blank => true -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user.user_number') -%><br />
    <%= f.text_field :user_number, :class => 'resource_user_number' -%>
  </p>

  <p>
    <%= submit_tag t('page.create') -%>
  </p>
<%- end -%>
<%= javascript_tag("$('#reserve_user_number').focus()") -%>
</div>
</div>

<div id="submenu">
  <%= render :partial => 'manifestations/book_jacket', :locals => {:manifestation => @reserve.manifestation} -%>
  <ul>
    <li><%= link_to t('page.listing', :model => t('activerecord.models.reserve')), reserves_path -%></li>
    <%- if @reserve.manifestation -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.manifestation')), @reserve.manifestation -%></li>
    <%- end -%>
  </ul>
</div>
