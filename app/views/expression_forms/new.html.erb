<div id="sidebar">
  <ul>
    <li><%= link_to t('page.back'), expression_forms_path -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.expression_form')) -%></h1>
<div class="inner">

<%= error_messages_for :expression_form -%>

<%- form_for(@expression_form) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.expression_form.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.expression_form.display_name') -%></b><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.expression_form.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
