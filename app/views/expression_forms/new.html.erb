<div id="submenu">
  <ul>
    <li><%= link_to ('Back'), expression_forms_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('New expression_form') -%></h1>

<%= error_messages_for :expression_form -%>

<%- form_for(:expression_form, :url => expression_forms_path) do |f| -%>
  <p>
  <b><%= ('Name') -%></b><br />
  <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
  <b><%= ('Display name') -%></b><br />
  <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
  <b><%= ('Note') -%></b><br />
  <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= submit_tag t('create') -%>
  </p>
<%- end -%>

</div>
