<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), expression_form_path(@expression_form) -%></li>
    <li><%= link_to t('page.back'), expression_forms_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.expression_form')) -%></h1>
<div id="content_list">

<%= error_messages_for :expression_form -%>

<%- form_for(@expression_form, :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.expression_form.name') -%></b><br />
    <%= f.text_area :name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.expression_form.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
