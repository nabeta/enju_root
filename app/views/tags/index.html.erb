<div id="submenu">
  <ul>
  </ul>
</div>

<div id="content_detail">
  <h1 class="title"><%= t('page.listing', :model => t('activerecord.models.tag')) -%></h1>
<div id="content_list">

<%- form_for :tags, :url => tags_path, :html => {:method => 'get'} do -%>
  <p>
  <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), {:class => 'search_form'} -%>
    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('query').focus()") -%>
<%- end -%>

<p><%= t('page.sort_by') -%>:
  <%= link_to t('activerecord.attributes.tag.name'), tags_path(:order => 'name') -%>
  <%= link_to t('activerecord.attributes.tag.taggings_count'), tags_path(:order => 'taggings_count') -%>
  <%= link_to t('page.created_at'), tags_path(:order => 'created_at') -%>
</p>

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.tag.name') -%></th>
    <!--
    <th><%= ('Link') -%></th>
    -->
    <th><%= t('activerecord.attributes.tag.taggings_count') -%></th>
    <th><%= t('page.created_at') -%></th>
  </tr>
<%- for tag in @tags -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= link_to h(tag.name), tag_path(tag.name) -%>
    </td>
    <!--
    <td>
      <%= link_to_wikipedia(tag.name) -%>
    </td>
    -->
    <td><%=h tag.taggings_count -%></td>
    <td><%= l(tag.created_at) -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@tags, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>
