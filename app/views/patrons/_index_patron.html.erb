<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.patron')) -%></h1>
<div id="content_list">
  <h2 class="resource_title">
    [P]
    <%= link_to h(@patron.full_name), @patron -%>
  </h2>
<%- form_for :patrons, :url => patron_patrons_path(@patron), :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), :class => 'search_form' -%>
    <%- if @patron.is_deletable_by(current_user) -%>
      <%- if params[:mode] == 'add' -%>
        <%= radio_button_tag 'mode', 'show' -%> <%= t('page.show') -%>
        <%= radio_button_tag 'mode', 'add', :checked => true -%> <%= t('page.add') -%>
      <%- else -%>
        <%= radio_button_tag 'mode', 'show', :checked => true -%> <%= t('page.show') -%>
        <%= radio_button_tag 'mode', 'add' -%> <%= t('page.add') -%>
      <%- end -%>
    <%- end -%>
    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('query').focus()") -%>
<%- end -%>

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.patron.full_name') -%></th>
    <th><%= t('activerecord.attributes.user.login') -%></th>
    <th><%= t('activerecord.models.patron_type') -%></th>
    <th><%= t('activerecord.attributes.patron.date_of_birth') -%></th>
    <th><%= t('activerecord.attributes.patron.date_of_death') -%></th>
    <th></th>
  </tr>
  <%- @patrons.each do |patron| -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= link_to h(patron.full_name), patron -%><br />
        <%= patron.full_name_transcription -%>
      </td>
      <td>
        <%= link_to h(patron.user.login), edit_user_path(patron.user.login) if patron.user -%>
      </td>
      <td><%= patron.patron_type.display_name.localize -%></td>
      <td><%=l patron.date_of_birth if patron.date_of_birth -%></td>
      <td><%=l patron.date_of_death if patron.date_of_death -%></td>
      <%- if patron.is_deletable_by(current_user) -%>
        <td>
          <%= link_to t('page.edit'), edit_patron_path(patron) -%>
        </td>
        <td>
          <%- if params[:mode] == "add" -%>
            <%= link_to t('page.add'), new_patron_patron_has_patron_path(@patron, :to_patron_id => patron.id) unless @patron.derived_patrons.include?(patron) or @patron == patron -%>
          <%- else -%>
            <%- patron_has_patron = @patron.to_patrons.find_by_to_patron_id(patron.id) -%>
            <%= link_to t('page.destroy'), patron_has_patron, :confirm => t('page.are_you_sure'), :method => :delete if patron_has_patron -%>
          <%- end -%>
        </td>
      <%- end -%>
    </tr>
  <%- end -%>
</table>

<%= will_paginate(@patrons, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>

<div id="submenu">
  <ul>
    <%- if Patron.is_creatable_by(current_user) -%>
      <li><%= link_to t('patron.add'), new_patron_path -%></li>
      <li><%= link_to t('page.merge', :model => t('activerecord.models.patron')), patron_merge_lists_path -%></li>
    <%- end -%>
  </ul>
</div>
