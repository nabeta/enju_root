<div id="submenu">
  <ul>
    <li><%= link_to ('New patron'), new_expression_patron_path(@expression) -%></li>
    <li><%= link_to ('Add a manifestation'), expression_manifestations_path(@expression) -%></li>
  </ul>
</div>

<div id="content_detail">

  <h1>
    [E]
    <%= link_to h(@expression.original_title), expression_path(@expression) -%>
  </h1>

<%- form_for :patrons, :url => expression_patrons_path(@expression), :html => {:method => 'get'} do -%>
<p>
  <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query) -%>
  <%- if_authorized?(:destroy, @expression) do -%>
    <%- if params[:mode] == 'add' -%>
      <%= radio_button_tag 'mode', 'show' -%> <%= t('page.show') -%>
      <%= radio_button_tag 'mode', 'add', :checked => true -%> <%= t('page.add') -%>
    <%- else -%>
      <%= radio_button_tag 'mode', 'show', :checked => true -%> <%= t('page.show') -%>
      <%= radio_button_tag 'mode', 'add' -%> <%= t('page.add') -%>
    <%- end -%>
  <%- end -%>
  <%= submit_tag t('page.search') -%>
  <%= link_to t('page.back_to_index'), expression_patrons_path(@expression) -%>
</p>
<%- end -%>

<table id="index">
  <tr>
    <th><%= t('activerecord.attributes.patron.full_name') -%></th>
    <th><%= ('Type') -%></th>
    <th><%= t('activerecord.attributes.patron.other_designation') -%></th>
    <th><%= t('activerecord.attributes.patron.place') -%></th>
    <th><%= t('activerecord.attributes.patron.date_of_birth') -%></th>
    <th><%= t('activerecord.attributes.patron.date_of_death') -%></th>
    <th></th>
  </tr>
<%- @patrons.each do |patron| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(patron.full_name), patron -%></td>
    <td><%=h patron.patron_type.display_name -%></td>
    <td><%=h patron.other_designation -%></td>
    <td><%=h patron.place -%></td>
    <td><%=h patron.date_of_birth -%></td>
    <td><%=h patron.date_of_death -%></td>
    <td>
      <%- if_authorized?(:destroy, patron) do -%>
        <%- if params[:mode] == 'add' -%>
          <%= link_to t('page.add'), new_expression_realize_path(@expression, :patron_id => patron.id) unless @expression.patrons.include?(patron) -%>
        <%- else -%>
          <%- realize = @expression.realizes.find_by_patron_id(patron.id) -%>
          <%= link_to t('page.destroy'), expression_realize_path(@expression, realize), :confirm => t('page.are_you_sure'), :method => :delete -%>
        <%- end -%>
      <%- end -%>
    </td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@patrons, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
