<div id="main">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.language')) -%></h1>
<div class="inner">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.language.native_name') -%></th>
    <th><%= t('activerecord.attributes.language.name') -%></th>
    <th><%= t('activerecord.attributes.language.display_name') -%></th>
    <th><%= ('Iso 639 1') -%></th>
    <th><%= ('Iso 639 2') -%></th>
    <th><%= ('Iso 639 3') -%></th>
  </tr>

<%- for language in @languages -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= language.first? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_up.png', :size => '16x16', :alt => t('page.asc')), {:action => 'update', :position  => (language.position  > 1 ? language.position - 1 : 1), :id => language.id}, :method => :put) -%>
      <%= language.last? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_down.png', :size => '16x16', :alt => t('page.desc')), {:action => 'update', :position => (language.position + 1), :id => language.id}, :method => :put) -%>
    </td>
    <td><%=h language.native_name -%></td>
    <td><%=h language.name -%></td>
    <td><%= link_to h(language.display_name.localize), language -%></td>
    <td><%=h language.iso_639_1 -%></td>
    <td><%=h language.iso_639_2 -%></td>
    <td><%=h language.iso_639_3 -%></td>
    <%- if language.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_language_path(language) -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="sidebar">
  <%- if Country.is_creatable_by(current_user) -%>
    <ul>
      <li><%= link_to t('page.new', :model => t('activerecord.models.language')), new_language_path -%></li>
    </ul>
  <%- end -%>
</div>
