<h1>Listing languages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Native name</th>
    <th>Display name</th>
    <th>Iso 639 1</th>
    <th>Iso 639 2</th>
    <th>Iso 639 3</th>
    <th>Note</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%= language.name %></td>
    <td><%= language.native_name %></td>
    <td><%= language.display_name %></td>
    <td><%= language.iso_639_1 %></td>
    <td><%= language.iso_639_2 %></td>
    <td><%= language.iso_639_3 %></td>
    <td><%= language.note %></td>
    <td><%= language.position %></td>
    <td><%= link_to 'Show', language %></td>
    <td><%= link_to 'Edit', edit_language_path(language) %></td>
    <td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

