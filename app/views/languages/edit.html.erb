<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @language -%></li>
    <li><%= link_to ('Back'), languages_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing language') -%></h1>

<%= error_messages_for :language -%>

<%- form_for(@language) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= ('Native name') -%></b><br />
    <%= f.text_field :native_name -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>

</div>
