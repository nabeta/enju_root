<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), languages_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.language')) -%></h1>
<div id="content_list">

<%= error_messages_for :language -%>

<%- form_for(@language) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.language.native_name') -%></b><br />
    <%= f.text_field :native_name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.language.name') -%>:</b>
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.language.display_name') -%></b><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.language.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
