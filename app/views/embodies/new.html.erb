<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.embody')) -%></h1>
<div id="content_list">

<%= form_for(@embody) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.models.expression') -%><br />
    <%- if @embody.expression -%>
      <%= link_to h(@embody.expression.original_title), @embody.expression -%>
      <%= f.hidden_field :expression_id -%>
    <%- else -%>
      <%= f.text_field :expression_id -%>
    <%- end -%>
  </p>
  <p>
    <%= f.label t('activerecord.models.manifestation') -%><br />
    <%- if @embody.manifestation -%>
      <%= link_to h(@embody.manifestation.original_title), @embody.manifestation -%>
      <%= f.hidden_field :manifestation_id -%>
    <%- else -%>
      <%= f.text_field :manifestation_id -%>
    <%- end -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <%- if @embody.manifestation -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.expression')), manifestation_expressions_path(@embody.manifestation) -%></li>
    <%- end -%>
    <%- if @embody.expression -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.manifestation')), expression_manifestations_path(@embody.expression) -%></li>
    <%- end -%>
    <li><%= link_to t('page.back_to_index'), embodies_path -%></li>
  </ul>
</div>
