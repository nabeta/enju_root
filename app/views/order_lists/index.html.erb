<div id="submenu">
  <ul>
    <li><%= link_to ('New order_list'), new_order_list_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Listing order_lists') -%></h1>

<table style="width: 100%">
  <tr>
    <th><%= t('page.title') -%></th>
    <th><%= t('page.bookstore') -%></th>
    <th><%= t('page.note') -%></th>
  </tr>

<%- for order_list in @order_lists -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(order_list.title), order_list -%></td>
    <td><%= link_to h(order_list.bookstore.name), order_list.bookstore -%></td>
    <td><%=h order_list.note -%></td>
    <td><%= link_to t('page.edit'), edit_order_list_path(order_list) -%></td>
    <td><%= link_to t('page.destroy'), order_list, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@order_lists) -%>

</div>
