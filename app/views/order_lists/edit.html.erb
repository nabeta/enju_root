<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @order_list -%></li>
    <li><%= link_to t('page.back'), order_lists_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.order_list')) -%></h1>
<div id="content_list">

<%- form_for(@order_list) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <b><%= t('activerecord.attributes.order_list.title') -%></b><br />
    <%= f.text_field :title, :class => 'resource_title' -%>
  </p>
  <p>
    <b><%= t('activerecord.models.bookstore') -%></b><br />
    <%= f.select(:bookstore_id, @bookstores.collect{|b| [b.name, b.id]}, :include_blank => true) -%>
  </p>
  <p>
    <b><%= t('activerecord.attributes.order_list.ordered_at') -%></b><br />
    <%= f.date_select :ordered_at -%>
  </p>
  <p>
    <b><%= t('activerecord.attributes.order_list.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
