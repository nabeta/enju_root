<p>Creation for <%= link_to h(@patron.full_name), @patron -%></p>

<table>
  <tr>
    <th><%= t('activerecord.models.work') -%></th>
    <th><%= t('page.created_at') -%></th>
    <th><%= t('page.updated_at') -%></th>
  </tr>

<%- for create in @creates -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(create.work.original_title), create.work -%></td>
    <td><%=h create.created_at -%></td>
    <td><%=h create.updated_at -%></td>
    <%- if_authorized?(:destroy, create) do -%>
      <td><%= link_to t('page.show'), patron_create_path(@patron, create) -%></td>
      <td><%= link_to t('page.destroy'), patron_create_path(@patron, create), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
      <td><%= create.first? ? '' : link_to('▲', {:action => 'update', :position => (create.position > 1 ? create.position - 1 : 1), :id => create.id, :patron_id => @patron.id}, :method => :put) -%></td>
      <td><%= create.last? ? '' : link_to('▼', {:action => 'update', :position => (create.position + 1), :id => create.id, :patron_id => @patron.id}, :method => :put) -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<br />

<%= will_paginate(@creates, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

<%= if_authorized?(:new, Create) do link_to t('page.new', :model => t('activerecord.models.create')), new_patron_create_path(@patron) end -%>
