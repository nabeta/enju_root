<p>Creation for <%= link_to h(@work.original_title), @work -%></p>

<table>
  <tr>
    <th><%= t('activerecord.models.patron') -%></th>
    <th><%= t('page.created_at') -%></th>
    <th><%= t('page.updated_at') -%></th>
  </tr>

<%- for create in @creates -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(create.patron.full_name), create.patron -%></td>
    <td><%=h create.created_at -%></td>
    <td><%=h create.updated_at -%></td>
    <%- if_authorized?(:destroy, create) do -%>
      <td><%= link_to t('page.show'), work_create_path(@work, create) -%></td>
      <td><%= link_to t('page.destroy'), work_create_path(@work, create), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
      <td><%= create.first? ? '' : link_to('▲', {:action => 'update', :position => (create.position > 1 ? create.position - 1 : 1), :id => create.id, :work_id => @work.id}, :method => :put) -%></td>
      <td><%= create.last? ? '' : link_to('▼', {:action => 'update', :position => (create.position + 1), :id => create.id, :work_id => @work.id}, :method => :put) -%></td>
    <%- end -%>
    </tr>
<%- end -%>
</table>

<br />

<%= will_paginate(@creates, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

<%= if_authorized?(:new, Create) do link_to ('New create'), new_work_create_path(@work) end -%>
