<%- manifestation = @manifestation if @manifestation -%>
  <%- if params[:mode] == 'show_all_authors' -%>
    <%- cache(:id => manifestation.id, :controller => :manifestations, :action => :show, :action_suffix => 'show_all_authors') do -%>
      <%- manifestation.authors.each do |patron| -%>
        <%= link_to h(patron.full_name), patron -%>
      <%- end -%>
      <%- if manifestation.authors.size > 3 -%>
        (<%= link_to_remote t('page.hide'), :update => "author_list_#{manifestation.id}", :url => {:controller => 'manifestations', :action => 'show', :id => manifestation.id, :mode => 'show_authors', :index_num => manifestation.id}, :method => :get -%>)
      <%- end -%>
    <%- end -%>
  <%- else -%>
    <%- cache(:id => manifestation.id, :controller => :manifestations, :action => :show, :action_suffix => 'show_limited_authors') do
    -%>
      <%- manifestation.authors[0..2].each do |patron| -%>
        <%= link_to h(patron.full_name), patron -%>
      <%- end -%>
      <%- if manifestation.authors.size > 3 -%>
        (<%= link_to_remote t('page.show_all'), :update => "author_list_#{manifestation.id}", :url => {:controller => 'manifestations', :action => 'show', :id => manifestation.id, :mode => 'show_all_authors', :index_num => manifestation.id}, :method => :get -%>)
      <%- end -%>
    <%- end -%>
  <%- end -%>

<%- cache(:id => manifestation.id, :controller => :manifestations, :action => :show, :action_suffix => 'show_editors_and_publishers') do -%>
  <%- manifestation.editors.each do |patron| -%>
    <%= link_to h(patron.full_name), patron -%>
  <%- end -%>

  <%- manifestation.publishers.each do |publisher| -%>
    <%= link_to h(publisher.full_name), publisher -%>
  <%- end -%>
<%- end -%>
