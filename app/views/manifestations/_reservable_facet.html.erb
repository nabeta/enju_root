<h4><%= t('manifestation.reservable') -%></h4>
<ul>
  <%- @reservable_facet.rows.each do |facet| -%>
    <%- if facet.value -%>
      <li>
        <%- if @reservable == 'true' -%><strong><%- end -%>
        <%= link_to localized_boolean(facet.value), url_for(:params => params.merge(:page => nil, :reservable => true, :view => nil)) -%>
        (<%= facet.count -%>)
        <%- if @reservable == 'true' -%></strong><%- end -%>
      </li>
    <%- end -%>
  <%- end -%>
  <%- if @reservable -%>
    <li><%= link_to t('page.remove_this_facet'), params.merge(:reservable => nil, :page => nil, :view => nil) -%></li>
  <%- end -%>
</ul>
