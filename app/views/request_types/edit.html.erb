<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @request_type -%></li>
    <li><%= link_to t('page.back'), request_types_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.request_type')) -%></h1>
<div id="content_list">

<%= error_messages_for :request_type -%>

<%- form_for(@request_type) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.request_type.name') -%></b><br />
    <%= f.text_area :name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.request_type.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
