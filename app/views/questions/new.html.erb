<div id="sidebar">
  <ul>
    <li><%= link_to t('page.back'), user_questions_path(@question.user.login) -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.question')) -%></h1>
<div class="inner">

<%= error_messages_for :question -%>

<%- form_for(:question, :url => user_questions_path(@question.user.login)) do |f| -%>
  <p>
  <b><%= t('activerecord.models.user') -%></b><br />
    <%= link_to h(@question.user.login), user_path(@question.user.login) -%>
    <%= f.hidden_field :user_id -%>
  </p>

  <p>
  <b><%= t('activerecord.attributes.question.body') -%></b><br />
  <%= f.text_area :body, :class => 'resource_textarea' -%>
  </p>

  <p>
  <b><%= t('activerecord.attributes.question.shared') -%></b>
    <%= f.check_box :shared -%>
  </p>

  <p>
  <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
