<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @family -%></li>
    <li><%= link_to t('page.back'), families_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.family')) -%></h1>

<%= error_messages_for :family -%>

<%- form_for(:family, :url => family_path(@family), :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.family.full_name') -%></b><br />
    <%= f.text_field :full_name, :class => 'resource_title' -%><br />
    <%= t('activerecord.attributes.family.full_name_transcription') -%><br />
    <%= f.text_field :full_name_transcription, :class => 'resource_title' -%><br />
    <%= t('activerecord.attributes.family.full_name_alternative') -%><br />
    <%= f.text_area :full_name_alternative, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.other_designation') -%></b><br />
    <%= f.text_area :other_designation, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.place') -%></b><br />
    <%= f.text_area :place, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.date_of_birth') -%></b><br />
    <%= f.date_select :date_of_birth, :include_blank => true -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.date_of_death') -%></b><br />
    <%= f.date_select :date_of_death, :include_blank => true -%>
  </p>

  <p>
    <b><%= t('activerecord.models.country') -%></b>
    <%= f.select(:country_id, @countries.collect{|c| [c.display_name, c.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.models.language') -%></b>
    <%= f.select(:language_id, @languages.collect{|l| [l.display_name, l.id]}) -%>
  </p>

  <p>
    <b><%= ('Access role') -%></b>
    <%= f.select(:access_role_id, @roles.collect{|r| [r.name, r.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <%- if @family.user -%>
  <hr />

  <p>
    <b><%= t('activerecord.attributes.family.zip_code_1') -%></b><br />
    <%= f.text_field :zip_code_1, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.address_1') -%></b><br />
    <%= f.text_area :address_1, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.telephone_number_1') -%></b><br />
    <%= f.text_field :telephone_number_1, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.fax_number_1') -%></b><br />
    <%= f.text_field :fax_number_1, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.address_1_note') -%></b><br />
    <%= f.text_area :address_1_note, :class => 'resource_textarea' -%>
  </p>

  <hr />

  <p>
    <b><%= t('activerecord.attributes.family.zip_code_2') -%></b><br />
    <%= f.text_field :zip_code_2, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.address_2') -%></b><br />
    <%= f.text_area :address_2, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.telephone_number_2') -%></b><br />
    <%= f.text_field :telephone_number_2, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.fax_number_2') -%></b><br />
    <%= f.text_field :fax_number_2, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.family.address_2_note') -%></b><br />
    <%= f.text_area :address_2_note, :class => 'resource_textarea' -%>
  </p>

  <%- end -%>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>
</div>
