<div id="sidebar">
  <ul>
    <%- if @purchase_request.order_list -%>
      <li><%= link_to t('purchase_request.remove_from_order_list'), order_list_order_path(@purchase_request.order_list, @purchase_request.order), :method => :delete, :confirm => t('page.are_you_sure') -%></li>
    <%- else -%>
      <li><%= link_to t('purchase_request.add_to_order_list'), new_purchase_request_order_path(@purchase_request) -%></li>
    <%- end -%>
    <%- if @user -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.purchase_request')), new_user_purchase_request_path(@user.login)%></li>
    <%- end -%>
    <li><%= link_to t('page.edit'), edit_user_purchase_request_path(@purchase_request.user.login, @purchase_request) -%></li>
    <%- if current_user.has_role?('Librarian') -%>
      <li><%= link_to t('page.destroy'), user_purchase_request_path(@purchase_request.user.login, @purchase_request), :confirm => t('page.are_you_sure'), :method => :delete -%></li>
    <%- end -%>
    <li><%= link_to t('page.back'), user_purchase_requests_path(@purchase_request.user.login, :page => flash[:page] ||= nil) -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.purchase_request')) -%></h1>
<div class="inner">

<p>
<b><%= t('activerecord.models.user') -%>:</b>
  <%= link_to h(@purchase_request.user.login), user_path(@purchase_request.user.login) -%>
</p>

<p>
<b><%= t('activerecord.models.order_list') -%>:</b>
  <%- if @purchase_request.order_list -%>
    <%= link_to h(@purchase_request.order_list.title), order_list_purchase_requests_path(@purchase_request.order_list) -%>
  <%- else -%>
    <%= t('purchase_request.not_ordered') -%>
  <%- end -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.title') -%>:</b>
  <%=h @purchase_request.title -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.author') -%>:</b>
  <%=h @purchase_request.author -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.publisher') -%>:</b>
  <%=h @purchase_request.publisher -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.isbn') -%>:</b>
  <%=h @purchase_request.isbn -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.date_of_publication') -%>:</b>
  <%=h @purchase_request.date_of_publication -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.price') -%>:</b>
  <%=h @purchase_request.price -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.url') -%>:</b>
  <%= link_to h(@purchase_request.url), @purchase_request.url -%>
</p>

<p>
  <b><%= t('activerecord.attributes.purchase_request.note') -%>:</b>
  <%=h @purchase_request.note -%>
</p>

<p>
  <b><%= t('activerecord.attributes.order_list.ordered_at') -%>:</b>
  <%= l(@purchase_request.order_list.ordered_at) if @purchase_request.order_list rescue nil -%>
</p>

<p>
<b><%= t('page.created_at') -%>:</b>
  <%= l(@purchase_request.created_at) -%>
</p>

<p>
<b><%= t('page.updated_at') -%>:</b>
  <%= l(@purchase_request.updated_at) -%>
</p>

</div>
</div>
