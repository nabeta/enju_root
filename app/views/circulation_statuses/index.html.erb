<div id="sidebar">
  <ul>
    <%- if CirculationStatus.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.circulation_status')), new_circulation_status_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.circulation_status')) -%></h1>
<div class="inner">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.circulation_status.name') -%></th>
    <th><%= t('activerecord.attributes.circulation_status.display_name') -%></th>
  </tr>

<%- for circulation_status in @circulation_statuses -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if circulation_status.is_deletable_by(current_user) -%>
        <%= circulation_status.first? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_up.png', :size => '16x16', :alt => t('page.asc')), {:action => 'update', :position  => (circulation_status.position  > 1 ? circulation_status.position - 1 : 1), :id => circulation_status.id}, :method => :put) -%>
        <%= circulation_status.last? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_down.png', :size => '16x16', :alt => t('page.desc')), {:action => 'update', :position => (circulation_status.position + 1), :id => circulation_status.id}, :method => :put) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(circulation_status.name), circulation_status -%></td>
    <td><%= link_to h(circulation_status.display_name.localize), circulation_status -%></td>
    <%- if circulation_status.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_circulation_status_path(circulation_status) -%></td>
      <td><%= link_to t('page.destroy'), circulation_status, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

</div>
</div>
