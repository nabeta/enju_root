<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), circulation_statuses_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('New circulation_status') -%></h1>

<%= error_messages_for :circulation_status -%>

<%- form_for(@circulation_status) do |f| -%>
  <p>
  <b><%= t('page.name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
  <b><%= t('page.display_name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
  <b><%= t('page.note') -%></b><br />
  <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
