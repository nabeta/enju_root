<div id="submenu">
  <ul>
    <li><%= link_to ('Add a corporate_body'), new_corporate_body_path -%></li>
  </ul>
</div>

<div id="content_detail">
  <h1><%= t('page.listing', :model => t('activerecord.models.corporate_body')) -%></h1>
<%- form_for :corporate_bodies, :url => corporate_bodies_path, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query) -%>
    <%= submit_tag t('page.search') -%>
  </p>
<%- end -%>

<table id="index">
  <tr>
    <th><%= ('Patron name') -%></th>
    <th><%= t('activerecord.models.language') -%></th>
    <th><%= t('activerecord.attributes.corporate_body.place') -%></th>
    <th></th>
  </tr>
  <%- @corporate_bodies.each do |corporate_body| -%>
    <%- unless corporate_body.nil? -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= link_to h(corporate_body.name), corporate_body -%><br />
        <%=h corporate_body.name_transcription -%>
      </td>
      <td><%=h corporate_body.language.display_name -%></td>
      <td><%=h corporate_body.place -%></td>
      <td>
        <%- if_authorized?(:destroy, corporate_body) do -%>
          <%= link_to t('page.edit'), edit_corporate_body_path(corporate_body) -%>
        <%- end -%>
      </td>
    </tr>
    <%- end -%>
  <%- end -%>
</table>

<%= will_paginate(@corporate_bodies, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
