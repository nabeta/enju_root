<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @corporate_body -%></li>
    <li><%= link_to t('page.back'), corporate_bodies_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.corporate_body')) -%></h1>

<%= error_messages_for :corporate_body -%>

<%- form_for(:corporate_body, :url => corporate_body_path(@corporate_body), :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.corporate_body.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%><br />
    <%= t('activerecord.attributes.corporate_body.name_transcription') -%><br />
    <%= f.text_field :name_transcription, :class => 'resource_title' -%><br />
    <%= t('activerecord.attributes.corporate_body.name_alternative') -%><br />
    <%= f.text_area :name_alternative, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.other_designation') -%></b><br />
    <%= f.text_area :other_designation, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.place') -%></b><br />
    <%= f.text_area :place, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.date_of_birth') -%></b><br />
    <%= f.date_select :date_of_birth, :include_blank => true -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.date_of_death') -%></b><br />
    <%= f.date_select :date_of_death, :include_blank => true -%>
  </p>

  <p>
    <b><%= t('activerecord.models.country') -%></b>
    <%= f.select(:country_id, @countries.collect{|c| [c.display_name, c.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.models.language') -%></b>
    <%= f.select(:language_id, @languages.collect{|l| [l.display_name, l.id]}) -%>
  </p>

  <p>
    <b><%= ('Access role') -%></b>
    <%= f.select(:access_role_id, @roles.collect{|r| [r.name, r.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <%- if @corporate_body.user -%>
  <hr />

  <p>
    <b><%= t('activerecord.attributes.corporate_body.zip_code_1') -%></b><br />
    <%= f.text_field :zip_code_1, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.address_1') -%></b><br />
    <%= f.text_area :address_1, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.telephone_number_1') -%></b><br />
    <%= f.text_field :telephone_number_1, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.fax_number_1') -%></b><br />
    <%= f.text_field :fax_number_1, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.address_1_note') -%></b><br />
    <%= f.text_area :address_1_note, :class => 'resource_textarea' -%>
  </p>

  <hr />

  <p>
    <b><%= t('activerecord.attributes.corporate_body.zip_code_2') -%></b><br />
    <%= f.text_field :zip_code_2, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.address_2') -%></b><br />
    <%= f.text_area :address_2, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.telephone_number_2') -%></b><br />
    <%= f.text_field :telephone_number_2, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.fax_number_2') -%></b><br />
    <%= f.text_field :fax_number_2, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.corporate_body.address_2_note') -%></b><br />
    <%= f.text_area :address_2_note, :class => 'resource_textarea' -%>
  </p>

  <%- end -%>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>
</div>
