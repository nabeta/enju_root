<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.country')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.country.display_name') -%></th>
    <th><%= t('activerecord.attributes.country.alpha_2') -%></th>
    <th><%= t('activerecord.attributes.country.alpha_3') -%></th>
    <th><%= t('activerecord.attributes.country.numeric_3') -%></th>
  </tr>

<%- @countries.each do |country| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if country.is_deletable_by(current_user) -%>
        <%= move_position(country) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(country.display_name.localize), country -%></td>
    <td><%=h country.alpha_2 -%></td>
    <td><%=h country.alpha_3 -%></td>
    <td><%=h country.numeric_3 -%></td>
    <%- if country.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_country_path(country) -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@countries, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.country')), new_country_path -%></li>
  </ul>
</div>
