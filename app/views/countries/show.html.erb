<div id="sidebar">
  <ul>
    <li><%= link_to t('page.edit'), edit_country_path(@country) -%></li>
    <li><%= link_to t('page.back'), countries_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.country')) -%></h1>
<div class="inner">

<p>
  <b><%= t('activerecord.attributes.country.display_name') -%>:</b>
  <%=h @country.display_name.localize -%>
</p>

<p>
  <b><%= t('activerecord.attributes.country.alpha_2') -%>:</b>
  <%=h @country.alpha_2 -%>
</p>

<p>
  <b><%= t('activerecord.attributes.country.alpha_3') -%>:</b>
  <%=h @country.alpha_3 -%>
</p>

<p>
  <b><%= t('activerecord.attributes.country.numeric_3') -%>:</b>
  <%=h @country.numeric_3 -%>
</p>

<p>
  <b><%= t('activerecord.attributes.country.note') -%>:</b>
  <%=h @country.note -%>
</p>

</div>
</div>
