<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @country -%></li>
    <li><%= link_to t('page.back'), countries_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing country') -%></h1>

<%= error_messages_for :country -%>

<%- form_for(@country) do |f| -%>
  <p>
    <b><%= t('page.name') -%></b><br />
    <%=h @country.name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.country.display_name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= t('page.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
