<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.work_relationship_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.work_relationship_type.name') -%></th>
    <th><%= t('activerecord.attributes.work_relationship_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.work_relationship_type.note') -%></th>
    <th></th>
  </tr>

<%- @work_relationship_types.each do |work_relationship_type| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if can? :destroy, work_relationship_type -%>
        <%= move_position(work_relationship_type) -%>
      <%- end -%>
    </td>
    <td><%= link_to work_relationship_type.name, work_relationship_type -%></td>
    <td><%= link_to work_relationship_type.display_name.localize, work_relationship_type -%></td>
    <td><%= work_relationship_type.note -%></td>
    <td>
      <%- if can? :destroy, work_relationship_type -%>
        <%= link_to t('page.edit'), edit_work_relationship_type_path(work_relationship_type) -%>
        <%= link_to t('page.destroy'), work_relationship_type, :confirm => t('page.are_you_sure'), :method => :delete -%>
      <%- end -%>
    </td>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.work_relationship_type')), new_work_relationship_type_path -%></li>
  </ul>
</div>
