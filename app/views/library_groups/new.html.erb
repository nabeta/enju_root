<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), library_groups_path -%></li>
  </ul>
</div>

<div id="conttent_detail">
<h1><%= t('page.new', :model => t('activerecord.models.library_group')) -%></h1>

<%= error_messages_for :library_group -%>

<%- form_for(:library_group, :url => library_groups_path) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.library_group.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library_group.display_name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library_group.short_name') -%></b><br />
    <%= f.text_field :short_name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library_group.email') -%></b><br />
    <%= f.text_field :email, :class => 'resource_email' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library_group.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library_group.my_networks') -%></b><br />
    <%= f.text_area :my_networks, :class => 'resource_textarea' -%>
  </p>

  <%= f.submit t('page.create') -%>
<%- end -%>

</div>
