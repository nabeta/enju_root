<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), library_groups_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing library_group') -%></h1>

<%= error_messages_for :library_group -%>

<%- form_for(:library_group, :url => library_group_path(@library_group), :html => { :method => :put }) do |f| -%>

  <p>
    <b><%= t('page.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('page.display_name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('page.short_name') -%></b><br />
    <%= f.text_field :short_name -%>
  </p>

  <p>
    <b><%= ('Email') -%></b><br />
    <%= f.text_field :email, :class => 'resource_email' -%>
  </p>

  <p>
    <b><%= ('My networks') -%></b><br />
    <%= f.text_area :my_networks, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('page.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <%= submit_tag t('page.update') -%>
<%- end -%>
</div>
