<div id="submenu">
  <ul>
    <li><%= link_to t('page.edit'), edit_library_group_path(@library_group) -%></li>
    <li><%= link_to t('page.back'), library_groups_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.library_group')) -%></h1>
<div id="content_list">

<p>
  <b><%= t('activerecord.attributes.library_group.display_name') -%>:</b>
  <%=h @library_group.display_name -%>
</p>

<p>
  <b><%= t('activerecord.attributes.library_group.short_name') -%>:</b>
  <%=h @library_group.short_name -%>
</p>

<p>
  <b><%= t('activerecord.attributes.library_group.email') -%>:</b>
  <%=h @library_group.email -%>
</p>

<p>
  <b><%= t('activerecord.attributes.library_group.valid_period_for_new_user') -%>:</b>
  <%=h @library_group.valid_period_for_new_user -%>
</p>

<div>
  <b><%= t('activerecord.attributes.library_group.login_banner') -%>:</b>
  <%= textilize(@library_group.login_banner) -%>
</div>

<p>
  <b><%= t('activerecord.attributes.library_group.post_to_union_catalog') -%>:</b>
  <%=h @library_group.post_to_union_catalog -%>
</p>

<p>
  <b><%= t('activerecord.attributes.library_group.my_networks') -%>:</b>
  <%=h @library_group.my_networks -%>
</p>

<p>
  <b><%= t('activerecord.attributes.library_group.use_dsbl') -%>:</b>
  <%=h @library_group.use_dsbl -%>
</p>

<p>
  <b><%= t('activerecord.attributes.library_group.dsbl_list') -%>:</b>
  <%= simple_format(h(@library_group.dsbl_list)) -%>
</p>

<p>
  <b><%= t('activerecord.attributes.library_group.note') -%>:</b>
  <%=h @library_group.note -%>
</p>

<p>
  <b><%= t('activerecord.models.library') -%>:</b></br>
</p>

<ul>
  <%- @library_group.physical_libraries.each do |library| -%>
    <li><%= link_to h(library.display_name), library_path(library.short_name) -%></li>
  <%- end -%>
</ul>

<p>
  <b><%= t('activerecord.models.news_feed') -%>:</b></br>
</p>

<ul>
  <%- @library_group.news_feeds.each do |news_feed| -%>
    <li><%= link_to h(news_feed.title), news_feed -%></li>
  <%- end -%>
</ul>

</div>
</div>
