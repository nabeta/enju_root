<h1><%= ('Listing library_groups') -%></h1>

<table style="width: 100%">
  <tr>
    <th><%= ('Name') -%></th>
    <th><%= ('Display name') -%></th>
    <th><%= ('Short name') -%></th>
    <th><%= ('Email') -%></th>
  </tr>
  
<%- for library_group in @library_groups -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(library_group.name), edit_library_group_path(library_group) -%></td>
    <td><%= link_to h(library_group.display_name), edit_library_group_path(library_group) -%></td>
    <td><%=h library_group.short_name -%></td>
    <td><%=h library_group.email -%></td>
    <td><%= link_to t('page.edit'), edit_library_group_path(library_group) -%></td>
  </tr>
<%- end -%>
</table>
