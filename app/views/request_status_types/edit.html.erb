<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @request_status_type -%></li>
    <li><%= link_to ('Back'), request_status_types_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing request_status_type') -%></h1>

<%= error_messages_for :request_status_type -%>

<%- form_for(@request_status_type) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>

</div>
