<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.expression_relationship_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.expression_relationship_type.name') -%></th>
    <th><%= t('activerecord.attributes.expression_relationship_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.expression_relationship_type.note') -%></th>
  </tr>

<%- @expression_relationship_types.each do |expression_relationship_type| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if expression_relationship_type.is_deletable_by(current_user) -%>
        <%= move_position(expression_relationship_type) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(expression_relationship_type.name), expression_relationship_type -%></td>
    <td><%= link_to h(expression_relationship_type.display_name.localize), expression_relationship_type -%></td>
    <td><%= expression_relationship_type.note -%></td>
    <td><%= link_to t('page.edit'), edit_expression_relationship_type_path(expression_relationship_type) -%></td>
    <td><%= link_to t('page.destroy'), expression_relationship_type, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.expression_relationship_type')), new_expression_relationship_type_path -%></li>
  </ul>
</div>
