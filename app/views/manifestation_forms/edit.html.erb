<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), manifestation_form_path(@manifestation_form) -%></li>
    <li><%= link_to t('page.back'), manifestation_forms_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.manifestation_form')) -%></h1>
<div id="content_list">

<%= error_messages_for :manifestation_form -%>

<%- form_for(@manifestation_form) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.manifestation_form.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.manifestation_form.display_name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.manifestation_form.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
