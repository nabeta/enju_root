<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), manifestation_forms_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('New manifestation_form') -%></h1>

<%= error_messages_for :manifestation_form -%>

<%- form_for(:manifestation_form, :url => manifestation_forms_path) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= submit_tag t('page.create') -%>
  </p>
<%- end -%>

</div>
