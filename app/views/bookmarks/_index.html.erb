<div id="submenu">
  <ul>
    <%- if Bookmark.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.bookmark')), new_bookmark_path -%></li>
    <%- end -%>
  </ul>
  <%- if logged_in? -%>
    <h4><%= t('page.bookmarklet') -%></h4>
    <ul>
      <li><a href="javascript:window.location.href='<%=h new_user_bookmark_url(current_user.login) -%>?url='+encodeURIComponent(location.href)+'&title='+encodeURIComponent(document.title);"><%= t('bookmarked_resource.add_to_library_bookmark') -%></a></li>
    </ul>
  <%- end -%>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.bookmark')) -%></h1>
<div id="content_list">
  <%- form_for :bookmarks, :url => bookmarks_path, :html => {:method => 'get'} do -%>
    <p>
      <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), :class => 'search_form' -%>
      <%= submit_tag t('page.search') -%>
    </p>
    <%= javascript_tag("$('query').focus()") -%>
  <%- end -%>

<table class="index">
  <tr>
    <th><%= t('activerecord.models.user') -%></th>
    <th><%= t('activerecord.models.bookmark') -%></th>
    <th><%= t('page.created_at') -%></th>
    <th><%= t('page.updated_at') -%></th>
  </tr>

<%- @bookmarks.each do |bookmark| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(bookmark.user.login), user_path(bookmark.user.login) -%></td>
    <td>
      <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => bookmark.manifestation} -%>
      <%= render :partial => 'manifestations/holding', :locals => {:manifestation => bookmark.manifestation} -%>
    </td>
    <td><%= l(bookmark.created_at) -%></td>
    <td><%= l(bookmark.updated_at) -%></td>
    <%- if bookmark.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.show'), bookmark_path(bookmark) -%></td>
      <td><%= link_to t('page.destroy'), bookmark_path(bookmark), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@bookmarks, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
