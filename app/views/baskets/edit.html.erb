<div id="submenu">
  <ul>
    <li><%= link_to t('show'), basket_path(@basket) -%></li>
    <li><%= link_to ('Back'), user_baskets_path(@basket.user.login) -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing basket') -%></h1>

<%= error_messages_for :basket -%>

<%- form_for(@basket) do |f| -%>
  <p>
  <b><%= ('User') -%></b><br />
    <%=h @basket.user.login -%>
    <%= f.hidden_field :user_id -%>
  </p>

  <p>
  <b><%= ('Note') -%></b><br />
  <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>
</div>
