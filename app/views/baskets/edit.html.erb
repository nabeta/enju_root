<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), basket_path(@basket) -%></li>
    <li><%= link_to t('page.back'), user_baskets_path(@basket.user.login) -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.basket')) -%></h1>

<%= error_messages_for :basket -%>

<%- form_for(@basket) do |f| -%>
  <p>
  <b><%= t('page.user') -%></b><br />
    <%=h @basket.user.login -%>
    <%= f.hidden_field :user_id -%>
  </p>

  <p>
  <b><%= t('activerecord.attributes.basket.note') -%></b><br />
  <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>
</div>
