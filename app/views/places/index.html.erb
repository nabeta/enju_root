<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.place')), new_place_path -%></li>
  </ul>
</div>

<div id="content_detail">
  <h1><%= t('page.listing', :model => t('activerecord.models.place')) -%></h1>
<%- form_for :places, :url => places_path, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query) -%>
    <%= submit_tag t('page.search') -%>
  </p>
<%- end -%>

<table id="index">
  <tr>
    <th><%= t('activerecord.attributes.place.term') -%></th>
    <th><%= t('activerecord.attributes.place.note') -%></th>
    <th></th>
  </tr>
  <%- @places.each do |place| -%>
    <%- unless place.nil? -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td><%= link_to h(place.term), place -%></td>
      <td><%= place.note -%></td>
      <td>
        <%- if_authorized?(:destroy, place) do -%>
          <%= link_to t('page.edit'), edit_place_path(place) -%>
        <%- end -%>
      </td>
    </tr>
    <%- end -%>
  <%- end -%>
</table>

<%= will_paginate(@places, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
