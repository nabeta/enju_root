<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.attachment_file')) -%></h1>
<div id="content_list">

<%- if @manifestation -%>
  <h2><%= link_to h(@manifestation.original_title), @manifestation -%></h2>
<%- end -%>

<table id="index">
  <tr>
    <th><%= t('activerecord.models.manifestation') -%></th>
    <th><%= t('activerecord.attributes.attachment_file.size') -%></th>
    <th><%= t('activerecord.attributes.attachment_file.content_type') -%></th>
    <th><%= t('activerecord.attributes.attachment_file.filename') -%></th>
  </tr>

<%- for attachment_file in @attachment_files -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(attachment_file.manifestation.original_title), attachment_file.manifestation -%></td>
    <td><%=h attachment_file.size -%></td>
    <td><%=h attachment_file.content_type -%></td>
    <td><%= link_to h(attachment_file.filename), attachment_file_path(attachment_file, :format => :download) -%></td>
    <%- if deletable(attachment_file) -%>
      <td><%= link_to t('page.show'), attachment_file -%></td>
      <td><%= link_to t('page.edit'), edit_attachment_file_path(attachment_file) -%></td>
      <td><%= link_to t('page.destroy'), attachment_file, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@attachment_files, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>

<div id="submenu">
  <%- if AttachmentFile.is_creatable_by(current_user) -%>
    <ul>
      <li><%= link_to t('page.new', :model => t('activerecord.models.attachment_file')), new_attachment_file_path -%></li>
    </ul>
  <%- end -%>
</div>
