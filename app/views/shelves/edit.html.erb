<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), library_shelf_path(@shelf.library.short_name) -%></li>
    <li><%= link_to t('page.back'), library_shelves_path(@shelf.library.short_name) -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.shelf')) -%></h1>
<div id="content_list">

<%= error_messages_for :shelf -%>

<%- form_for(@shelf) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.shelf.name') -%></b><br />
    <%= f.text_area :name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.shelf.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.models.library') -%></b><br />
    <select name="shelf[library_id]">
      <%= options_from_collection_for_select(@libraries, "id", "name", @shelf.library_id) -%>
    </select>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>
</div>
</div>
