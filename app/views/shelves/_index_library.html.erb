<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Shelf) do -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.shelf')), new_library_shelf_path(@library.short_name) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
  <h1 class="title"><%= t('page.listing', :model => t('activerecord.models.shelf')) -%></h1>
<div id="content_list">

<table id="index">
  <tr>
    <th><%= t('activerecord.attributes.shelf.name') -%></th>
    <th><%= t('activerecord.models.library') -%></th>
  </tr>
  
<%- @shelves.each_with_index do |shelf, i| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(shelf.name), shelf -%></td>
    <td><%= link_to h(shelf.library.name), library_path(shelf.library.short_name) -%></td>
    <%- if_authorized?(:destroy, shelf) do -%>
      <td><%= link_to t('page.edit'), edit_library_shelf_path(shelf.library.short_name, shelf) -%></td>
      <td><%= link_to t('page.destroy'), shelf_path(shelf), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
      <td><%= shelf.first? ? '' : link_to('▲', {:action => 'update', :position  => (shelf.position  > 1 ? shelf.position - 1 : 1), :id => shelf.id}, :method => :put) -%></td>
      <td><%= shelf.last? ? '' : link_to('▼', {:action => 'update', :position => (shelf.position + 1), :id => shelf.id}, :method => :put) -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@shelves, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>
