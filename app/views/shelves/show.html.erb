<div id="submenu">
  <%- if_authorized?(:destroy, @shelf) do -%>
    <ul>
      <li><%= link_to t('page.new', :model => t('activerecord.models.shelf')), new_shelf_path -%></li>
      <li><%= link_to t('page.edit'), edit_shelf_path(@shelf) -%></li>
      <li><%= link_to t('page.add_picture'), new_library_shelf_picture_file_path(@shelf.library.short_name, @shelf) -%></li>
      <li>
        <%= link_to t('page.back'), shelves_path -%>
      </li>
    </ul>
<%- end -%>
</div>
<div id="content_detail">
<div id="content_list">
  <h1 id="resource_title"><%= link_to h(@shelf.library.name), library_path(@shelf.library.short_name) -%>
    <%=h @shelf.name -%></h1>
</p>

<p>
  <%=h @shelf.note -%><br />
</p>

<p>
  <b><%= t('activerecord.models.picture_file') -%>:</b><br />
  <%- @shelf.picture_files.each do |file| -%>
    <%= image_tag(picture_file_path(file.thumbnails.first, :format => file.thumbnails.first.extname)) -%>
  <%- end -%>
</p>

<p>
  <b><%= t('page.created_at') -%>:</b>
  <%= l(@shelf.created_at) -%>
</p>

<p>
  <b><%= t('page.updated_at') -%>:</b>
  <%= l(@shelf.updated_at) -%>
</p>

</div>
</div>
