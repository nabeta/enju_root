<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.item_relationship_type')), new_item_relationship_type_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.item_relationship_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.item_relationship_type.name') -%></th>
    <th><%= t('activerecord.attributes.item_relationship_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.item_relationship_type.note') -%></th>
  </tr>

<%- for item_relationship_type in @item_relationship_types -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if item_relationship_type.is_deletable_by(current_user) -%>
        <%= item_relationship_type.first? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_up.png', :size => '16x16', :alt => t('page.asc')), {:action => 'update', :position  => (item_relationship_type.position  > 1 ? item_relationship_type.position - 1 : 1), :id => item_relationship_type.id}, :method => :put) -%>
        <%= item_relationship_type.last? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_down.png', :size => '16x16', :alt => t('page.desc')), {:action => 'update', :position => (item_relationship_type.position + 1), :id => item_relationship_type.id}, :method => :put) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(item_relationship_type.name), item_relationship_type -%></td>
    <td><%= link_to h(item_relationship_type.display_name.localize), item_relationship_type -%></td>
    <td><%=h item_relationship_type.note -%></td>
    <td><%= link_to t('page.edit'), edit_item_relationship_type_path(item_relationship_type) -%></td>
    <td><%= link_to t('page.destroy'), item_relationship_type, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
</div>
