<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.subject_type')), new_subject_type_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.subject_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.subject_type.name') -%></th>
    <th><%= t('activerecord.attributes.subject_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.subject_type.note') -%></th>
  </tr>

<%- @subject_types.each do |subject_type| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if subject_type.is_deletable_by(current_user) -%>
        <%= subject_type.first? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_up.png', :size => '16x16', :alt => t('page.asc')), {:action => 'update', :position  => (subject_type.position  > 1 ? subject_type.position - 1 : 1), :id => subject_type.id}, :method => :put) -%>
        <%= subject_type.last? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_down.png', :size => '16x16', :alt => t('page.desc')), {:action => 'update', :position => (subject_type.position + 1), :id => subject_type.id}, :method => :put) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(subject_type.name), subject_type -%></td>
    <td><%= link_to h(subject_type.display_name.localize), subject_type -%></td>
    <td><%=h subject_type.note -%></td>
    <td><%= link_to t('page.edit'), edit_subject_type_path(subject_type) -%></td>
    <td><%= link_to t('page.destroy'), subject_type, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
</div>
