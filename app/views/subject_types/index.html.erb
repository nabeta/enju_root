<div id="submenu">
  <ul>
    <li><%= link_to ('New subject_type'), new_subject_type_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Listing subject_types') -%></h1>

<table style="width: 100%">
  <tr>
    <th><%= t('page.name') -%></th>
    <th><%= t('page.display_name') -%></th>
    <th><%= t('page.note') -%></th>
  </tr>

<%- for subject_type in @subject_types -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(subject_type.name), subject_type -%></td>
    <td><%=h subject_type.display_name -%></td>
    <td><%=h subject_type.note -%></td>
    <td><%= link_to t('page.edit'), edit_subject_type_path(subject_type) -%></td>
    <td><%= link_to t('page.destroy'), subject_type, :confirm => ('Are you sure?'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
