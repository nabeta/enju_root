<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.user_has_shelf')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th><%= t('activerecord.models.user') -%></th>
    <th><%= t('activerecord.models.shelf') -%></th>
  </tr>

<%- @user_has_shelves.each do |user_has_shelf| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(user_has_shelf.user.username), user_path(user_has_shelf.user.username) -%></td>
    <td><%= link_to h(user_has_shelf.shelf.display_name.localize), user_has_shelf.shelf -%></td>
    <td><%= link_to t('page.show'), user_has_shelf -%></td>
    <td><%= link_to t('page.edit'), edit_user_has_shelf_path(user_has_shelf) -%></td>
    <td><%= link_to t('page.destroy'), user_has_shelf, :confirm => 'Are you sure?', :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.user_has_shelf')), new_user_has_shelf_path -%></li>
  </ul>
</div>
