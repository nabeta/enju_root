<h1><%= t('page.advanced_search') -%></h1>

<%- form_tag({:controller => 'manifestations'}, {:method => 'get'}) do -%>
  <table>
    <tr>
      <td><label><%= t('page.search_term') -%>:</label></td>
      <td><%= text_field_tag 'query' -%></td>
    </tr>
    <tr>
      <td><label><%= ('Tag') -%>:</label></td>
      <td><%= text_field_tag 'tag' -%></td>
    </tr>
    <tr>
      <td><label><%= ('Author') -%>:</label></td>
      <td><%= text_field_tag 'author' -%></td>
    </tr>
    <tr>
      <td><label><%= ('Publisher') -%>:</label></td>
      <td><%= text_field_tag 'publisher' -%></td>
    </tr>
    <tr>
      <td><label>ISBN:</label></td>
      <td><%= text_field_tag 'isbn' -%></td>
    </tr>
    <tr>
      <td><label><%= ('Date of publication') -%>:</label></td>
      <td>from <%= text_field_tag 'pubdate_from', nil, :size => 5 -%>
        to <%= text_field_tag 'pubdate_to', nil, :size => 5 -%></td>
    </tr>
    <tr>
      <td><label><%= ('Number of pages') -%>:</td>
        <td>from <%= text_field_tag 'number_of_pages_at_least', nil, :size => 5 -%>
          to <%= text_field_tag 'number_of_pages_at_most', nil, :size => 5 -%></td>
    </tr>
    <tr>
      <td><label><%= ('Holding library') -%>:</label></td>
      <td>
        <select id="library_top" name="library">
          <option value=""><%= ('All libraries') -%></option>
          <%= options_from_collection_for_select(@libraries, "short_name", "name", params[:library].to_s) -%>
        </select>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= hidden_field_tag 'advanced_search', 'true' -%>
        <%= submit_tag t('page.search') -%>
      </td>
    </tr>
  </table>
<%- end -%>
