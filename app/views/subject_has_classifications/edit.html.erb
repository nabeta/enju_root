<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @subject_has_classification -%></li>
    <li><%= link_to t('page.back'), subject_has_classifications_path -%></li>
  </ul>
</div>

<div id="content_detail">
  <h1><%= t('page.editing', :model => t('activerecord.models.subject_has_classification')) -%></h1>

<%= error_messages_for :subject_has_classification -%>

<%- form_for(@subject_has_classification) do |f| -%>
  <p>
    <b><%= t('activerecord.models.subject') -%></b><br />
    <%= f.text_field :subject_id -%>
  </p>

  <p>
    <b><%= t('activerecord.models.classification') -%></b><br />
    <%= f.text_field :classification_id -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

