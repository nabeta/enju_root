<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), user_question_answer_path(@answer.user.login, @answer.question, @answer) -%></li>
    <li><%= link_to t('page.back'), user_question_answers_path(@answer.user.login, @answer.question) -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.answer')) -%></h1>
<div id="content_list">

<%- form_for(@answer, :url => user_question_answer_path(@answer.user.login, @answer.question, @answer)) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.models.user') -%><br />
    <%= link_to h(@answer.user.login), user_path(@answer.user) -%>
  </p>

  <p>
    <%= f.label t('activerecord.models.question') -%><br />
    <%= link_to h(@answer.question.body), question_path(@answer.question) -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.answer.body') -%><br />
    <%= f.text_area :body, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
