<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), roles_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.new', :model => t('activerecord.models.role')) -%></h1>

<%= error_messages_for :role -%>

<%- form_for(:role, :url => roles_path) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.role.name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.role.display_name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.role.score') -%></b><br />
    <%= f.text_field :score -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.role.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('page.created_at') -%></b><br />
    <%= f.datetime_select :created_at -%>
  </p>

  <p>
    <b><%= t('page.updated_at') -%></b><br />
    <%= f.datetime_select :updated_at -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
