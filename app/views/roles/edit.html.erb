<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), role_path(@role) -%></li>
    <li><%= link_to t('page.back'), roles_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.role')) -%></h1>
<div class="inner">

<%= error_messages_for :role -%>

<%- form_for(@role) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.role.name') -%></b><br />
    <%=h @role.name -%>
    <%= f.hidden_field :name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.role.display_name') -%></b><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.role.score') -%></b><br />
    <%= f.text_field :score -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.role.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
