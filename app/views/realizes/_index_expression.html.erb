<div id="submenu">
  <ul>
    <li><%= link_to t('page.listing', :model => t('activerecord.models.patron')), expression_patrons_path(@expression) -%></li>
    <%- if Realize.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.realize')), new_expression_realize_path(@expression) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.realize')) -%></h1>
<div id="content_list">
  <h2>
    <%= link_to h(@expression.original_title), @expression -%>
  </h2>

<table class="index">
  <tr>
    <th><%= t('activerecord.models.expression') -%></th>
  </tr>

<%- for realize in @realizes -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= link_to h(realize.expression.original_title), realize.expression -%>
      <%= expression_form_icon(@expression.expression_form) -%>
      <br />
      <%= patrons_list(@expression.authors) -%>
      <%= patrons_list(@expression.patrons) -%>
    </td>
    <%- if realize.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.destroy'), expression_realize_path(@expression, realize), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
      <td><%= realize.first? ? '' : link_to('▲', {:action => 'update', :position => (realize.position > 1 ? realize.position - 1 : 1), :id => realize.id, :expression_id => @expression.id}, :method => :put) -%></td>
      <td><%= realize.last? ? '' : link_to('▼', {:action => 'update', :position => (realize.position + 1), :id => realize.id, :expression_id => @expression.id}, :method => :put) -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@realizes, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
