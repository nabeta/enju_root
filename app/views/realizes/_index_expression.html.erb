<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Realize) do -%>
      <li><%= link_to ('New realize'), new_expression_realize_path(@expression) -%></li>
      <li><%= link_to t('page.back'), expression_patrons_path(@expression) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
  <h1>
    <%= link_to h(@expression.original_title), expression_path(@expression) -%>
  </h1>

<table id="index">
  <tr>
    <th><%= t('page.expression') -%></th>
  </tr>

<%- for realize in @realizes -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= link_to h(realize.expression.original_title), expression_path(realize.expression) -%>
      <%= expression_form_icon(@expression.expression_form) -%>
      <br />
      <%= patrons_list(@expression.authors) -%>
      <%= patrons_list(@expression.patrons) -%>
    </td>
    <%- if_authorized?(:destroy, realize) do -%>
      <td><%= link_to t('page.destroy'), expression_realize_path(@expression, realize), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
      <td><%= realize.first? ? '' : link_to('▲', {:action => 'update', :position => (realize.position > 1 ? realize.position - 1 : 1), :id => realize.id, :expression_id => @expression.id}, :method => :put) -%></td>
      <td><%= realize.last? ? '' : link_to('▼', {:action => 'update', :position => (realize.position + 1), :id => realize.id, :expression_id => @expression.id}, :method => :put) -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@realizes, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
