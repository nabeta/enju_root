<div id="sidebar">
  <ul>
    <li><%= link_to t('page.edit'), edit_user_group_path(@user_group) -%></li>
    <li><%= link_to t('page.back'), user_groups_path -%></li>
    <li><%= link_to t('page.new', :model => t('activerecord.models.checkout_type')), new_user_group_user_group_has_checkout_type_path(@user_group) -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.user_group')) -%></h1>
<div class="inner">
<p>
  <b><%= t('activerecord.attributes.user_group.name') -%>:</b>
  <%=h @user_group.name -%>
</p>

<p>
  <b><%= t('activerecord.attributes.user_group.display_name') -%>:</b>
  <%=h @user_group.display_name.localize -%>
</p>

<p>
  <b><%= t('activerecord.attributes.user_group.note') -%>:</b>
  <%=h @user_group.note -%>
</p>

<p>
  <b><%= t('activerecord.models.checkout_type') -%></b>
</p>
<ul>
  <%- @user_group.user_group_has_checkout_types.each do |available_checkout_type| -%>
    <li>
      <%= link_to h(available_checkout_type.checkout_type.display_name.localize), available_checkout_type.checkout_type -%>
      (<%= link_to t('page.number_of_days', :count => available_checkout_type.checkout_period), edit_user_group_user_group_has_checkout_type_path(@user_group, available_checkout_type) -%>)
    </li>
  <%- end -%>
</ul>

</div>
</div>
