<div id="submenu">
  <ul>
    <li><%= link_to t('show'), user_group_path(@user_group) -%></li>
    <li><%= link_to ('Back'), user_groups_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing user_group') -%></h1>

<%= error_messages_for :user_group -%>

<%- form_for(:user_group, :url => user_group_path(@user_group), :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= submit_tag t('update') -%>
  </p>
<%- end -%>

</div>
