<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), user_groups_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.user_group')) -%></h1>
<div id="content_list">

<%= error_messages_for :user_group -%>

<%- form_for(@user_group) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.user.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.user_group.display_name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.user_group.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
  <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
