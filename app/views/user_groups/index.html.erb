<div id="submenu">
  <ul>
    <li><%= link_to ('New user_group'), new_user_group_path -%></li>
  </ul>
</div>
  
<div id="content_detail">
<h1><%= ('Listing user_groups') -%></h1>

<table id="index">
  <tr>
    <th><%= t('page.name') -%></th>
    <th><%= t('page.display_name') -%></th>
    <th><%= t('page.note') -%></th>
  </tr>
  
<%- for user_group in @user_groups -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(user_group.name), user_group -%></td>
    <td><%= link_to h(user_group.display_name), user_group -%></td>
    <td><%=h user_group.note -%></td>
    <td><%= link_to t('page.edit'), edit_user_group_path(user_group) -%></td>
    <td><%= link_to t('page.destroy'), user_group_path(user_group), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
