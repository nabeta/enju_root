<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), @work_merge -%></li>
    <li><%= link_to t('page.back'), work_merges_path -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.work_merge')) -%></h1>

<%= error_messages_for :work_merge -%>

<%- form_for(@work_merge) do |f| -%>

  <p>
  <b><%= t('activerecord.models.work') -%></b><br />
  <%= f.text_field :work_id, :value => @work_merge.work_id -%>
  </p>

  <p>
  <b><%= t('activerecord.models.work_merge_list') -%></b><br />
  <%= f.text_field :work_merge_list_id, :value => @work_merge.work_merge_list_id -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
