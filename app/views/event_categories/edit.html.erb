<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @event_category -%></li>
    <li><%= link_to ('Back'), event_categories_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing event_category') -%></h1>

<%= error_messages_for :event_category -%>

<%- form_for(@event_category) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>

</div>
