<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @frequency -%></li>
    <li><%= link_to t('page.back'), frequencies_path -%></li>
  </ul>
</div>
  
<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.frequency')) -%></h1>
<div id="content_list">

<%= error_messages_for :frequency -%>

<%- form_for(@frequency) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.frequency.name') -%></b><br />
    <%= f.text_area :name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.frequency.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
